{
  "manifest_version": 3,
  "name": "BBO Tools",
  "version": "1.0.0",
  "description": "A collection of tools for Bridge Base Online",
  "author": "fubbleskag",
  "browser_specific_settings": {
    "gecko": {
      "id": "bbo-tools@fubbleskag.extension",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.bridgebase.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.bridgebase.com/*"],
      "css": ["filter-controls.css"],
      "js": ["bbo-tools.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["*://*.bridgebase.com/*"]
    }
  ]
}